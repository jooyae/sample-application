<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ReminiscenceWinter" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/grey8</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/pretendardregular</item>
    </style>

    <style name="Widget.BottomNavigationActivateView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/pretendardbold</item>
    </style>

    <style name ="radius20">
        <item name = "cornerSize">20%</item>
    </style>

</resources>